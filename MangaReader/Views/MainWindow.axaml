<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:MangaReader.ViewModels"
        xmlns:conv="using:MangaReader.Converters"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="MangaReader.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="MangaReader">

    <Window.Resources>
        <ResourceDictionary>
            <conv:NullToBooleanConverter x:Key="NullToBoolConv"/>
        </ResourceDictionary>
    </Window.Resources>

    <Window.Styles>
        <Style Selector="Button.overlay">
            <Setter Property="Width" Value="60"/>
            <Setter Property="Height" Value="60"/>
            <Setter Property="Margin" Value="20,0"/>
            <Setter Property="Background" Value="#80000000"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CornerRadius" Value="30"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Opacity" Value="0.3"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="0"/>
        </Style>

        <Style Selector="Button.overlay:pointerover">
            <Setter Property="Opacity" Value="0.9"/>
            <Setter Property="Background" Value="#A0000000"/>
        </Style>
        
        <Style Selector="Button.ClickMe">
            <!-- 1. Заменяем весь стандартный шаблон на свой собственный -->
            <Setter Property="Template">
                <ControlTemplate>
                    <!-- Наш шаблон - это просто рамка с текстом внутри -->
                    <Border Background="{TemplateBinding Background}"
                            CornerRadius="{TemplateBinding CornerRadius}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            BorderBrush="{TemplateBinding BorderBrush}">
                        <ContentPresenter Content="{TemplateBinding Content}"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter>

            <!-- 2. Теперь наши обычные сеттеры будут работать с НАШИМ шаблоном -->
            <Setter Property="Background" Value="ForestGreen"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="30"></Setter>
            <Setter Property="Width" Value="150"></Setter>
        </Style>
    
        <!-- 3. И стили для состояний теперь тоже работают предсказуемо -->
        <Style Selector="Button.ClickMe:pointerover">
            <Setter Property="Background" Value="DarkGreen"/>
        </Style>

        <Style Selector="Button.ClickMe:pressed">
            <Setter Property="Background" Value="#004d00"/>
        </Style>
    </Window.Styles>
    
    <Grid RowDefinitions="0.03*, 0.94*, 0.03*">
        <Border Grid.Row="0" Background="DarkGray">
            <Button Command="{Binding OpenVolumeCommand}" Content="Open Folder" HorizontalAlignment="Left" Classes="ClickMe" Margin="10"/>
        </Border>
        
        <Grid Grid.Row="1" Background="Black">
            <Image Source="{Binding CurrentImage}" Stretch="Uniform" />
            
            <TextBlock IsVisible="{Binding CurrentImage, Converter={StaticResource NullToBoolConv}}" Text="Здесь будет изображение" Foreground="White" 
                       HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20"/>
            
            <Button Command="{Binding GoToPreviousPageCommand}" Content="‹" HorizontalAlignment="Left" VerticalAlignment="Center" Classes="overlay"/>
            <Button Command="{Binding GoToNextPageCommand}" Content="›" HorizontalAlignment="Right" VerticalAlignment="Center" Classes="overlay"/>
        </Grid>
        
        <Border Grid.Row="2" Background="Black" BorderBrush="Snow" BorderThickness="0,1,0,0">
            <DockPanel>
                <TextBlock DockPanel.Dock="Right" Text="{Binding Page, StringFormat='Страница: {0}'}" FontFamily="{StaticResource RobotoFont}" Margin="0,0,10,0"/>
                <TextBlock Text="{Binding Volume_name, StringFormat='Текущий файл: {0}'}" Margin="10,0,0,0"/>
            </DockPanel>
        </Border>
    </Grid>

</Window>